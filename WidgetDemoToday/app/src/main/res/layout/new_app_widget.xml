<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.WidgetDemoToday.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.WidgetDemoToday.AppWidgetContainer">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">
    <Button
        android:id="@+id/appButton1"
        style="@style/Widget.WidgetDemoToday.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="1"
        android:textSize="28sp"
        android:textStyle="bold|italic" />
    <Button
        android:id="@+id/appButton2"
        style="@style/Widget.WidgetDemoToday.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="2"
        android:textSize="28sp"
        android:textStyle="bold|italic" />
</LinearLayout>
</RelativeLayout>